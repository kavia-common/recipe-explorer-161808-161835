<resources>
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Base text style to inherit from -->
    <style name="Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="RecipeCard">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Subtitle" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
